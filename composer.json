{
    "name": "sjustein/hash-sensitive",
    "description": "Monolog processor to protect sensitive information from logging",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "sjustein",
            "email": "hashsensitive@justinruiter.nl"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "monolog/monolog": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "HashSensitive\\": "src/"
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.4"
    },
    "autoload-dev": {
        "psr-4": {
            "HashSensitiveTests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
