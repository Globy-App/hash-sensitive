parameters:
    tmpDir: .tmp
    level: 9
    paths:
        - src
        - tests
        - examples
    ignoreErrors:
        -
            message: '#Undefined variable: \$this#'
            path: */tests/*
        -
            message: '#Call to an undefined method Pest\\Expectation\|Pest\\Support\\Extendable\:\:#'
            path: */tests/*

includes:
    - vendor/phpstan/phpstan-deprecation-rules/rules.neon
